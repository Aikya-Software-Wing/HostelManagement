@using (@Html.BeginForm("GenerateReportByAmount", "User", FormMethod.Post))
{
    <div id="BidRangeDiv">
        <div class="row">
            <fieldset class="form-group">
                <div class="form-group col-xs-3">
                    <label>Start Amount</label>
                    <input name="StartAmt" class="form-control" type="number" step="0.01" />
                </div>
                <div class="form-group col-xs-3">
                    <label>End Amount</label>
                    <input name="EndAmt" class="form-control" type="number" step="0.01" />
                </div>
                <div class="form-group col-xs-3">
                </div>
                <div class="form-group col-xs-3">
                </div>
            </fieldset>
        </div>
    </div>
    <div class="row">
        @Html.ValidationSummary()
    </div>
    <div class="row">
        <fieldset class="form-group">
            <div class="form-group col-xs-3">
                <input type="submit" class="btn btn-primary btn-block" />
            </div>
        </fieldset>
    </div>
}