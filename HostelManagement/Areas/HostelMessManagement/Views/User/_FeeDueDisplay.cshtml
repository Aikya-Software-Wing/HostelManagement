@model List<HostelManagement.Areas.HostelMessManagement.Models.HostelFeeDueViewModel>

@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Academic Year</th>
                <th>Account Head</th>
                <th>Amount</th>
                <th>Amount Paid</th>
                <th>Amount Due</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.academicYear</td>
                    <td>@item.accountHead</td>
                    <td>@item.amount</td>
                    <td>@item.amountPaid</td>
                    <td>@item.amountDue</td>
                </tr>
            }
        </tbody>
    </table>
    foreach (Tuple<string, decimal> item in ViewBag.totalDues.Values)
    {
        <h5>@item.Item1 DUE = @item.Item2</h5>
    }
}
else
{
    <h4>No Dues</h4>
}