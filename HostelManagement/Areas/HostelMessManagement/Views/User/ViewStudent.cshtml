@model HostelManagement.Areas.HostelMessManagement.Models.StudentSearchViewModel
@{
    ViewBag.Title = "ViewStudent";
}

<h2>ViewStudent</h2>

@using (Ajax.BeginForm("ViewStudent", null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "studentId", InsertionMode = InsertionMode.Replace }, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.bid)
        @Html.TextBoxFor(m => m.bid, new { @class = "form-control" })
    </div>
    <input type="submit" class="btn btn-primary" />
}

<div id="studentId">

</div>
