
@{
    ViewBag.Title = "ViewTransactions";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h2 class="text-center">Generate Report</h2>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-5 col-md-offset-4">
        @using (Ajax.BeginForm("GenerateReport", null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "generateReportDiv", InsertionMode = InsertionMode.Replace }, new { @class = "form-inline" }))
        {
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon3">Report Type</span>
                @Html.DropDownList("reportType", (SelectList)ViewBag.reportTypeList, "Select", new { @class = "form-control"})
                <span class="input-group-btn">
                    <input class="btn btn-primary" type="submit" value="Proceed!" />
                </span>
            </div>
        }
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div id="generateReportDiv">
            Please fill the form above
        </div>
    </div>
</div>