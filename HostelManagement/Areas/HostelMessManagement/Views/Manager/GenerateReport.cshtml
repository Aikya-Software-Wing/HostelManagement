
@{
    ViewBag.Title = "ViewTransactions";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h2 class="text-center">Generate Report</h2>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-xs-2">

    </div>
    <div class="col-xs-8">
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">
                            View Transactions By BID
                        </a>
                    </h4>
                </div>
                <div id="collapse1" class="panel-collapse collapse in">
                    <div class="panel-body">
                        
                        @using (@Html.BeginForm("GenerateReportByBID", "Manager", FormMethod.Post))
                        {
                            <div id="BidRangeDiv">
                                <div class="row">
                                    <fieldset class="form-group">
                                        <div class="form-group col-xs-3">
                                            <label>Start BID</label>
                                            <input name="StartBid" class="form-control" type="text" />
                                        </div>
                                        <div class="form-group col-xs-3">
                                            <label>End BID </label>
                                            <input name="EndBid" class="form-control" type="text" />
                                        </div>
                                        <div class="form-group col-xs-3">
                                        </div>
                                        <div class="form-group col-xs-3">
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                            <div class="row">
                                @Html.ValidationSummary()
                            </div>
                            <div class="row">
                                <fieldset class="form-group">
                                    <div class="form-group col-xs-3">
                                        <input type="button" value="Add Range" class="btn btn-link btn-block" id="btnAdd" />
                                    </div>
                                    <div class="form-group col-xs-3">
                                        <input type="submit" class="btn btn-primary btn-block" />
                                    </div>
                                </fieldset>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">
                            View Transactions by Date
                        </a>
                    </h4>
                </div>
                <div id="collapse2" class="panel-collapse collapse">
                    <div class="panel-body">
                        Lorem ipsum dolor sit amet, consectetur adipisicing elit,
                        sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad
                        minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea
                        commodo consequat.
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse3">
                            View Transactions By Amount
                        </a>
                    </h4>
                </div>
                <div id="collapse3" class="panel-collapse collapse">
                    <div class="panel-body">
                        Lorem ipsum dolor sit amet, consectetur adipisicing elit,
                        sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad
                        minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea
                        commodo consequat.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />

<script type="text/javascript">
    $("#btnAdd").click(function () {
        var div = $("<div />");
        div.html(GetDynamicDivValue(""));
        $("#BidRangeDiv").append(div);
    });
    function GetDynamicDivValue() {
        return "<div class=\"row\">"
            + "<fieldset class=\"form-group\">"
            + "<div class=\"form-group col-xs-3\">"
            + "<label>Start BID</label>"
            + "<input name=\"StartBid\" class=\"form-control\" type=\"text\" />"
            + "</div>"
            + "<div class=\"form-group col-xs-3\">"
            + "<label>End BID </label>"
            + "<input name=\"EndBid\" class=\"form-control\" type=\"text\" />"
            + "</div>"
            + "<div class=\"form-group col-xs-3\">"
            + "</div>"
            + "<div class=\"form-group col-xs-3\">"
            + "</div>"
            + "</fieldset>"
            + "</div>";
    }
</script>