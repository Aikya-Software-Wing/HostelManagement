
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    <link href="~/Content/themes/base/core.css" rel="stylesheet" />
    <link href="~/Content/themes/base/datepicker.css" rel="stylesheet" />
    <link href="~/Content/themes/base/theme.css" rel="stylesheet" />
    <script src="~/scripts/jquery-ui-1.11.4.js"></script>
    <link href="~/Content/HomepageStyle.css" rel="stylesheet" />
</head>

<body>

    <div id="bg">
        <img src="~/Content/rnsit_1.jpg" alt="">
    </div>

    <!--Where relevant things start-->
    <div class="container-fluid">

        <div class="row" style="padding-top:25px;"><div class="col-xs-12" align="center"><h2 id="page_title">Welcome, @User.Identity.Name!</h2></div></div>
        <hr>

        <div class="row" id="content_box">
            <div class="col-md-4">
                @Html.ActionLink("Hostel Transaction", "HostelTransaction", "User", new { area = "HostelMessManagement" }, new { id = "btn_quickaccess", @class = "btn" })
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Mess Transaction", "MessTransaction", "User", new { area = "HostelMessManagement" }, new { id = "btn_quickaccess", @class = "btn" })
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Generate Mess Bill", "GenerateMessBill", "User", new { area = "HostelMessManagement" }, new { id = "btn_quickaccess", @class = "btn" })
            </div>
        </div>
        <hr>
        <div class="row" id="content_box">
            <div class="col-md-4">
                @Html.ActionLink("List of hostel fee defaulters", "ShowAllDues", "User", new { area = "HostelMessManagement" }, new { id = "btn_quickaccess", @class = "btn" })
            </div>
            <div class="col-md-4">
                @Html.ActionLink("List of mess fee defaulters", "ShowAllMessDues", "User", new { area = "HostelMessManagement" }, new { id = "btn_quickaccess", @class = "btn" })
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Report Absence for Mess", "ReportAbsenceForMess", "User", new { area = "HostelMessManagement" }, new { id = "btn_quickaccess", @class = "btn" })
            </div>
        </div>
        <hr>
        <div class="row" id="content_box">
            <div class="col-md-4">
                @Html.ActionLink("Add Student", "AddStudent", "User", new { area = "HostelMessManagement" }, new { id = "btn_quickaccess", @class = "btn" })
            </div>
            <div class="col-md-4">
                @Html.ActionLink("View Student", "ViewStudent", "User", new { area = "HostelMessManagement" }, new { id = "btn_quickaccess", @class = "btn" })
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Remove Student", "RemoveStudent", new { area = "HostelMessManagement" }, new { id = "btn_quickaccess", @class = "btn" })
            </div>
        </div>
        <hr>
        <div class="row" id="content_box">
            <div class="col-md-4">
                @Html.ActionLink("Update Student Allotment", "ChangeRoom", "User", new { area = "HostelMessManagement" }, new { id = "btn_quickaccess", @class = "btn" })
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Update Hostel Fees", "ChangeFees", "Manager", new { area = "HostelMessManagement" }, new { id = "btn_quickaccess", @class = "btn" })
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Add Additional Fee", "AddAdditionalFee", "User", new { area = "HostelMessManagement" }, new { id = "btn_quickaccess", @class = "btn" })
            </div>
        </div>
        <hr>
        <div class="row" id="content_box">
            <div class="col-md-4">
                @Html.ActionLink("Discount Fee", "DiscountFees", "User", new { area = "HostelMessManagement" }, new { id = "btn_quickaccess", @class = "btn" })
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Visit Archive", "Index", "Home", new { area = "Archive" }, new { id = "btn_quickaccess", @class = "btn" })
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Logout", "Logout", "User", new { area = "HostelMessManagement" }, new { id = "btn_quickaccess", @class = "btn" })
            </div>
        </div>
        <hr>
    </div>
</body>
</html>