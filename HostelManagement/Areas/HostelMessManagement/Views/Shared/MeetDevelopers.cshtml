                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Generate Report", "GenerateReport", "User", new { area = "HostelMessManagement" }, new { @class = "nav-link" })</li>
                            <li>@Html.ActionLink("Generate Individual Student Report", "GenerateStudentReport", "User", new { area = "HostelMessManagement" }, new { @class = "nav-link" })</li>
                        </ul>
                    </li>

                </ul>
                <ul class="nav navbar-nav pull-right">
                    <li>@Html.ActionLink("Logout", "Logout", "User", new { area = "HostelMessManagement" }, new { @class = "nav-link" })</li>
                </ul>

            </div>
        </div>
