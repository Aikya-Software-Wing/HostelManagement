@model HostelManagement.Areas.Administration.Models.AddUserViewModel
@{
    ViewBag.Title = "AddUser";
}

<h2>AddUser</h2>

<h3>Fill in the following details to add a user to the system</h3>
@Html.ValidationSummary()
@using (Html.BeginForm("AddUser", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Username)
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Role)
        @Html.DropDownListFor(m => m.Role, new List<SelectListItem> { new SelectListItem { Value = "Admin", Text = "Admin" }, new SelectListItem { Value = "Manager", Text = "Manager" }, new SelectListItem { Value = "User", Text = "User" } }, new { @class = "form-control"})
    </div>
    <input type="submit" class="btn btn-primary"/>
}