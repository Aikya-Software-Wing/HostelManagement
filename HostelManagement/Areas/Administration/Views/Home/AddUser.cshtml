@model HostelManagement.Areas.Administration.Models.AddUserViewModel
@{
    ViewBag.Title = "AddUser";
}

<h2>AddUser</h2>

<h3>Fill in the following details to add a user to the system</h3>

@using (Html.BeginForm("AddUser", "Home", FormMethod.Post))
{
    @Html.LabelFor(m => m.Username);
    @Html.TextBoxFor(m => m.Username);
    <br />
    @Html.LabelFor(m => m.Password);
    @Html.PasswordFor(m => m.Password);
    <br />
    @Html.LabelFor(m => m.Role);
    @Html.DropDownListFor(m => m.Role, new List<SelectListItem> { new SelectListItem { Value = "Admin", Text = "Admin" }, new SelectListItem { Value = "Manager", Text = "Manager" }, new SelectListItem { Value = "User", Text = "User" } });
    <br />
    <input type="submit" />
}