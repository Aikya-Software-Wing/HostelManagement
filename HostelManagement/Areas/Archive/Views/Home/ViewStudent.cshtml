@model HostelManagement.Areas.HostelMessManagement.Models.StudentSearchViewModel
@{
    ViewBag.Title = "ViewStudent";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h2 class="text-center">View Student</h2>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-5 col-md-offset-4">
        @using (Ajax.BeginForm("ViewStudent", null, new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "studentId", InsertionMode = InsertionMode.Replace }, new { @class = "form-inline" }))
        {
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon3">BID</span>
                @Html.TextBoxFor(m => m.bid, new { @class = "form-control", id = "bidID" })
                <span class="input-group-btn">
                    <input class="btn btn-primary" type="submit" value="View!" />
                </span>
            </div>
        }
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div id="studentId">
            Please enter the BID above to view student details
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#bidID').autocomplete({
            source: '@Url.Action("GetStudentList", "User", new { area = "HostelMessManagement"})'
        }).data("ui-autocomplete")._renderItem = function (ul, item) {
            return $("<li>")
            .append("<a>" + item.label + " (" + item.usn + ")" + "<br>Dept:" + item.dept + ",room:" + item.room + "</a>")
            .appendTo(ul);
        };;
    })
</script>