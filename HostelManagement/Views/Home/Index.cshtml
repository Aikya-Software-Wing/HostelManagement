@model HostelManagement.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}


<div class="loginContainer">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-row row-fluid">
            <div class="span12">
                <div class="row-fluid">
                    <label class="form-label span12" for="username">
                        Username:
                        <span class="icon16 icomoon-icon-user-2 right gray marginR10"></span>
                    </label>
                    @Html.TextBoxFor(m => m.UserId, new { @class = "span12" })
                </div>
            </div>
        </div>

        <div class="form-row row-fluid">
            <div class="span12">
                <div class="row-fluid">
                    <label class="form-label span12" for="password">
                        Password:
                        <span class="icon16 icomoon-icon-locked right gray marginR10"></span>
                    </label>
                    @Html.PasswordFor(m => m.Password, new { @class = "span12" })
                </div>
            </div>
        </div>
        @Html.HiddenFor(m => m.ReturnUrl)
        <div class="form-row row-fluid">
            <div class="span12">
                <div class="row-fluid">
                    <div class="form-actions">
                        <div class="span12 controls">
                            @Html.ValidationSummary(true)
                            <button type="submit" class="btn btn-info right" id="loginBtn"><span class="icon16 icomoon-icon-enter white"></span> Login</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>







